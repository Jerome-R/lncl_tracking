{% extends "AppBundle::layout.html.twig" %}

{% block title %}
	{{ parent() }} - Désabonnement
{% endblock %}

{% block content %}

<div class="col-xs-12 col-md-6 col-md-offset-3">
	<hr>
	<h3 class="text-center">Désabonnement</h3>	
	<hr>

	<p class="text-center">{{tracking.email}}</p>
	<hr>

	<h3>Choississez la raison de votre désabonnement :</h3>
		{{ form_start(form, {'attr': {'class': ''}}) }}
			{{ form_errors(form) }}
			<div class="form-group">
				<label class="col-xs-12 control-label control-label optional" for="appbundle_exclude_cli11nt_from_campaign_client_optOutNotRelevant">
					Raison
				</label>
				<div class="col-xs-12">
					{{ form_widget(form.raison, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<div class="form-group">
				<label class="col-xs-12 control-label control-label optional" for="appbundle_exclude_cli11nt_from_campaign_client_optOutNotRelevant">
				</label>
				<div class="col-xs-12">
					{{ form_widget(form.submit, {'attr': {'class': 'btn big-gray-btn hidden-print', 'style': 'font-size:14px;'}, 'label': 'Se désinscrire'}) }}
				</div>
			</div>
			{{ form_rest(form) }}
		{{ form_end(form) }}

	<hr>

</div>
	
{% endblock %}